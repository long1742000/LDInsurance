@model LDInsurance.Models.Report

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1>Details</h1>

    <div>
        <h4>Report</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vehicle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vehicle.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClaimAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Check</a> 
        <a asp-action="Index" class="btn btn-secondary">
            <span class="text">Back to List</span>
        </a>
    </div>
</div>
