@model LDInsurance.Models.Account

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="col-5" style="margin:0 auto; height: 50px">
        <p style="text-align:center; font-size:30px; color: forestgreen">Welcome</p>
    </div>
    <div class="col-3" style="margin:0 auto; height: 400px; border: solid 3px; border-color: greenyellow; padding-top:20px">
        <div class="col-11" style="margin:0 auto">
            <div style="margin:0 auto; color:green; font-size:20px; text-align:center">Please Enter Your Account</div>
            <form asp-action="Login">
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username..." />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block" style="background-color:greenyellow; color:green"><i class="fa fa-key"></i> Login</button>
                </div>
            </form>
            <img src="~/img/logo.png" width="100%" />
            <a asp-action="Create">Register</a>
        </div>
    </div>
</div>