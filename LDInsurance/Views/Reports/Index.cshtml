@model IEnumerable<LDInsurance.Models.Report>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid" style="height:610px">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClaimAmount)
                </th>
                <th>
                    <a asp-action="Write"><i class="fas fa-edit"></i></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimAmount)
                    </td>
                    <th>
                        <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-eye"></i></a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
