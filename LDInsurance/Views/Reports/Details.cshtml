@model LDInsurance.Models.Report

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid" style="height:610px">
    <div>
        <h4>Report</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vehicle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vehicle.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClaimAmount)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    </div>
</div>
