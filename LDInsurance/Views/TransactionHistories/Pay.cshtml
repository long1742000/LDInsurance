@model LDInsurance.Models.TransactionHistory

@{
    ViewData["Title"] = "Pay";
}

<div class="container" style="height:610px">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Pay">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                Choose your bank
                <select name="cars" id="cars">
                    <option value="vietcombank">Vietcombank</option>
                    <option value="dongabank">Dong A Bank</option>
                    <option value="techcombank">Techcombank</option>
                    <option value="sacombank">Sacombank</option>
                </select>
                <div class="form-group">
                    <label asp-for="Card" class="control-label"></label>
                    <input asp-for="Card" class="form-control" />
                    <span asp-validation-for="Card" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label> (Please enter correct insurance amount)
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Pay" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>