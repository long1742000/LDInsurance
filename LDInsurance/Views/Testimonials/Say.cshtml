@model LDInsurance.Models.Testimonial

@{
    ViewData["Title"] = "Say";
}

<div class="container" style="height:610px">
    <div class="card">
        <form asp-action="Say">
            <div class="card-header" style="background-color: greenyellow; color: green"><h3>Review card</h3></div>
            <div class="card-body">
                <p style="font-size:15px; font-family: Comic Sans MS , Lucida Sans Unicode , sans-serif">
                    <textarea style="height:200px" asp-for="Content" class="form-control" placeholder="Say something..." required></textarea>
                </p>
            </div>
            <div class="card-footer">
                <input type="submit" value="Enter" class="btn btn-primary" style="background-color: greenyellow; border-color:greenyellow; color:green" />
            </div>
        </form>
    </div>
</div>
